<section class ="wrapper">
  <% if @shelter %>
  <h1><%= @shelter.pet_count %> Pets at <%= @shelter.name %></h1>
    <p><%= link_to "Add Pet", "/shelters/#{@shelter.id}/pets/new" %></p>
  <% else %>
    <h1>All Pets</h1>
  <% end %>

  <% @pets.each do |pet| %>
    <section id="pet-<%= pet.id %>">
      <p><%= image_tag pet.image %></p>
      <h3><%= link_to pet.name, "/pets/#{pet.id}" %></h3>
      <p><%= pet.approximate_age %> y/o <%= pet.sex %></p>
      <p><%= link_to pet.shelter_name, "/shelters/#{pet.shelter_id}" %></p>
      <p><%= link_to "Update", "/pets/#{pet.id}/edit" %> <%= link_to "Delete", "/pets/#{pet.id}", method: "delete" %></p>
    </section>
  <% end %>
</section>
