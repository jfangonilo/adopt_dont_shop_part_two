<section class = "wrapper">
  <h1><%= @pet.name %></h1>
  <%= link_to "See Applications", "/pets/#{@pet.id}/applications" %>
  <%= image_tag @pet.image %>
    <% if favorites.is_included?(@pet.id) %>
      <%= button_to "Remove #{@pet.name} from Favorites", "/favorites/#{@pet.id}", method: :delete %>
    <% else %>
      <%= button_to "Add #{@pet.name} to Favorites", "/favorites/#{@pet.id}", method: :patch %>
    <% end %>
  <p><%= @pet.description %><p>
  <p><%= @pet.approximate_age %> y/o <%= @pet.sex %></p>

  <% if @pet.adoptable? %>
    <section id="adoptable-status">
      <p>Adoptable</p>
    </section>
  <% else %>
    <section id="adoptable-status">
      <p>Adoption Pending: <%= @pet.applicant_name %> </p>
    </section>
  <% end %>
  
  <p><%= link_to "Update", "/pets/#{@pet.id}/edit" %>
  <%= link_to "Delete", "/pets/#{@pet.id}", method: "delete" %></p>
</section>
