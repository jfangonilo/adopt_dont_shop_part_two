<section class = "wrapper">
  <%= form_tag "/shelters/#{@shelter.id}/pets" do %>
    <%= label_tag :image %>
    <%= text_field_tag :image %><br>

    <%= label_tag :name %>
    <%= text_field_tag :name %><br>

    <%= label_tag :description %>
    <%= text_field_tag :description %><br>

    <%= label_tag :approximate_age %>
    <%= text_field_tag :approximate_age %><br>

    <%= label_tag(:sex, "Male") %>
    <%= radio_button_tag(:sex, "Male") %><br>
    <%= label_tag(:sex, "Female") %>
    <%= radio_button_tag(:sex, "Female") %><br>

    <%= submit_tag 'Submit' %>
  <% end %>
</section>
