<h3>Add a Review</h3>

<section class = "wrapper">

  <%= form_tag "/shelters/#{@shelter_id}/shelter_reviews" do %>

    <%= label_tag :title %>
    <%= text_field_tag :title %>

    <%= label_tag :rating %>
    <%= text_field_tag :rating %>

    <%= label_tag :content %>
    <%= text_field_tag :content %>

    <%= label_tag :picture %>
    <%= text_field_tag :picture %>

    <%= submit_tag "Submit Review" %>

    <% end %>

</section>
