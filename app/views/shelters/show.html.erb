<section class = "wrapper">
  <h1><%= link_to @shelter.name, "/shelters/#{@shelter.id}/pets" %></h1>
  <p><%= @shelter.address %>, <%= @shelter.city %> <%= @shelter.state %> <%= @shelter.zip %></p>
  <p><%= link_to "Update", "/shelters/#{@shelter.id}/edit" %>
  <%= link_to "Delete", "/shelters/#{@shelter.id}", method: "delete" %></p>


  <% @shelter.shelter_reviews.each do |review| %>
    <section id="review-<%= review.id %>">
      <%= review.title %><br>
      <%= review.rating %><br>
      <%= review.content %><br>
      <%= image_tag review.picture %><br>
    </section>
  <% end %>

  <%= link_to "Add a Review", "/shelters/#{@shelter.id}/shelter_reviews/new" %>

</section>
