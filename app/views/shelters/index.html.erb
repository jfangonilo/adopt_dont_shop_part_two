<h1>Shelters</h1>
<section class = "wrapper">
  <h3><%= link_to "New Shelter", "/shelters/new" %></h3>
  <% @shelters.each do |shelter| %>
    <section id="shelter-<%= shelter.id %>">
      <h2><%= link_to shelter.name, "/shelters/#{shelter.id}" %></h2>
      <p><%= link_to "Edit", "/shelters/#{shelter.id}/edit" %>
        <% if shelter.pets_pending %>
          <p>Cannot delete <%= shelter.name %>, pets pending adoption.</p>
        <% else %>
          <%= link_to "Delete", "/shelters/#{shelter.id}", method: "delete" %></p>
        <% end %>
    </section>
  <% end %>
</section>
