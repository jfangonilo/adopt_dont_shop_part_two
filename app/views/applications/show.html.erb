<%= @application.name %><br>
<%= @application.address %><br>
<%= @application.city %><br>
<%= @application.state %><br>
<%= @application.zip %><br>
<%= @application.phone_number %><br>
<%= @application.description %><br>
<% @application.pets.each do |pet| %>

  <section id="pet-<%= pet.id %>">
    <%= link_to pet.name, "/pets/#{pet.id}" %><br>

    <% if pet.adoptable? %>
      <%= link_to "Approve Application for #{pet.name}", "/pets/#{pet.id}/applications/#{@application.id}", method: :patch %>
    <% elsif pet.adoptable? == false && @application.id == pet.applicant_id %>
      <p>You are already approved!</p>
      <%= link_to "Revoke Application for #{pet.name}", "/pets/#{pet.id}/applications/#{@application.id}", method: :patch %><br>
    <% else %>
      <%= link_to "Revoke Application for #{pet.name}", "/pets/#{pet.id}/applications/#{@application.id}", method: :patch %><br>
      <p><%= pet.name %> is already pending adoption! No more adoption approvals can be made at this time.</p>
    <% end %>

  </section>
<% end %><br>
