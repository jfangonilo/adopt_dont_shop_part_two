<h1>Favorites</h1>
<section class = "wrapper">
  <section id = "favorites">
  <% if !favorites.empty? %>
    <% @pets.each do |pet| %>
    <section id = "favorite-<%= pet.id %>">
      <h2><%= pet.name %></h2>
      <p><%= image_tag pet.image %></p>
      <%= button_to "Remove #{pet.name} from Favorites", "/favorites/#{pet.id}", method: :patch %>
    </section>
    <% end %>
  </section>
  <h3><%= link_to "Remove All Favorites", "/favorites", method: :delete %></h3>
  <%= button_to "Start Adoption Application", '/applications/new', method: :get %>
  <% end %>
  <section id = "favorites-list">
    <h2>All Pets with Applications</h2>
    <p><% all_pets_with_applications.each do |pet| %>
      <%= link_to pet.name, "/pets/#{pet.id}" %>
    <% end %></p>
  </section>
  <section id = "approved-applications">
    <h2>Pending Approval</h2>
    <% all_pets_with_pending_applications.each do |pet| %>
      <%= link_to pet.name, "/pets/#{pet.id}" %>
    <% end %>
  </section><br>
</section>
